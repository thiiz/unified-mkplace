// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Better-Auth Models

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions Session[]
  accounts Account[]
  shopeeShops ShopeeShop[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  idToken String?
  scope   String?

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model ShopeeShop {
  id            String   @id @default(cuid())
  userId        String
  shopId        String   @unique // Storing as String to avoid BigInt issues on client side
  shopName      String?
  accessToken   String
  refreshToken  String
  expiresIn     Int
  expireAt      DateTime // Calculated expiration time
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  shopeeProducts ShopeeProduct[]

  @@map("shopee_shop")
}

model Product {
  id          String   @id @default(cuid())
  sku         String   @unique
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  stock       Int
  brand       String?  // Required by some marketplaces like Shopee
  ean         String?  // EAN-13 barcode
  weight      Float?
  width       Float?
  height      Float?
  length      Float?
  categoryId  String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  media          ProductMedia[]
  shopeeProducts ShopeeProduct[]
  
  @@map("product")
}

model ProductMedia {
  id           String    @id @default(cuid())
  productId    String
  type         MediaType
  url          String
  thumbnailUrl String?   // For videos
  publicId     String    // Cloudinary public ID for deletion
  filename     String
  size         Int       // File size in bytes
  mimeType     String
  order        Int       @default(0)
  
  product      Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime  @default(now())
  
  @@index([productId])
  @@map("product_media")
}

enum MediaType {
  IMAGE
  VIDEO
}

model ShopeeProduct {
  id            String   @id @default(cuid())
  productId     String
  shopeeShopId  String
  shopeeItemId  String
  status        String   // SYNCED, ERROR, UNLINKED

  product       Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  shopeeShop    ShopeeShop @relation(fields: [shopeeShopId], references: [shopId], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([shopeeShopId, shopeeItemId])
  @@map("shopee_product")
}
